	<!-- 회원가입 -->
	<insert id="insertUser">
		INSERT INTO USER_TBL VALUES(#{ uId }, #{ uPw }, #{ uPwRe }, #{ uName }, #{ uNickName }, #{ uEmail }, #{ uPhone }, #{ uAddr }, #{ uAddrNo }, #{ uFileName }, #{ uFileReName }, #{ uFilePath }, #{ uFileLength }, DEFAULT, DEFAULT)
	</insert>
	
	<!-- 로그인 -->
	<select id="userLogin" resultType="User">
		SELECT * FROM USER_TBL WHERE U_ID = #{ uId } AND U_PW = #{ uPw } AND U_STATUS = 'Y'
	</select>
	
	<!-- 회원정보조회 -->
	<select id="selectOneById" resultType="User">
		SELECT * FROM USER_TBL WHERE U_ID = #{ uId } AND U_STATUS = 'Y'
	</select>
	
	<!-- 회원정보수정 -->
	<update id="updateUser">
		UPDATE USER_TBL SET U_PW = #{ uPw }, U_PWRE = #{ uPwRe }, U_NAME = #{ uName }, U_NICKNAME = #{ uNickName }, U_EMAIL = #{ uEmail } , U_PHONE = #{ uPhone }, U_ADDR = #{ uAddr }, U_ADDRNO = #{ uAddrNo }, U_FILENAME = #{ uFileName }, U_FILERENAME = #{ uFileReName }, U_FILEPATH = #{ uFilePath }, U_FILELENGTH = #{ uFileLength } WHERE U_ID = #{ uId } AND U_STATUS = 'Y'
	</update>
  
  	<!-- 회원 탈퇴 -->
	<update id="deleteUser">
		UPDATE USER_TBL SET U_STATUS = 'N' WHERE U_ID = #{ uId }
	</update>
	
